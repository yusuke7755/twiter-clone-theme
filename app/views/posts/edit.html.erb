<%= render 'header' %>
<article class="inner">
<h2>つぶやきを変える</h2>
<%= form_with(model: @post, local: true ,url: choose_new ) do |form| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
        <h2><%= @post.errors.count %>件のエラーがあります。</h2>
      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="post_content">
    <p><%= form.label "今、思っていること" %></p>
    <p id="inquiry" ><%= form.text_area :content %></p>
  </div>
  <%= form.submit value="保管する" %>
<% end %>
<p><%= link_to "つぶやき一覧画面にもどる", posts_path %></p>
</article>
<%= render 'footer' %>